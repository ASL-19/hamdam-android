<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:theme="@style/HamdamTheme.CustomDialogStyle">

    <TextView
        android:id="@+id/dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/toolbar_padding_horizontal"
        android:layout_marginRight="@dimen/toolbar_padding_horizontal"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textColor="@color/dark_background_purple"
        android:textSize="@dimen/text_size_medium_header" />

    <RelativeLayout
        android:id="@+id/edit_days_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/dialog_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/toolbar_padding"
            android:padding="@dimen/button_padding" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/button_margin_wide"
            android:layout_marginRight="@dimen/button_margin_wide">


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/period_length_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textColor="@color/dark_background_purple"
                android:textSize="40sp" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/period_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/toolbar_padding_horizontal"
        android:layout_marginRight="@dimen/toolbar_padding_horizontal"
        android:layout_marginStart="@dimen/toolbar_padding_horizontal"
        android:layout_marginLeft="@dimen/toolbar_padding_horizontal"
        android:animateLayoutChanges="true"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:padding="4dip"
        android:text="@string/edit_later_hint"
        android:textColor="@color/light_text_grey" />

</LinearLayout>
