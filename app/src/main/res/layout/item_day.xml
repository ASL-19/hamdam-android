<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/day_item_size"
    android:layout_gravity="center"
    android:gravity="center">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="?attr/periodWindow"
        android:id="@+id/periodWindowBackground" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="?attr/circleCurrentDay"
        android:id="@+id/select_day" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/num" />

</RelativeLayout>